<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bomberkong">

    <application
        android:allowBackup="true"
        android:icon="@drawable/monkey"
        android:label="@string/app_name"
        android:roundIcon="@drawable/monkey"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HowToPlay"
            android:label="How To Play"
            android:parentActivityName=".GameStart">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GameStart" />
        </activity>
        <activity android:name=".GameStart"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>
    </application>

</manifest>